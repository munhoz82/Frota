@model FrotaTaxi.Models.Unidade

@{
    ViewBag.Title = "Excluir Unidade";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Excluir Unidade</h5>
                </div>
                <div class="ibox-content">
                    <div class="alert alert-warning">
                        <i class="fa fa-warning"></i> Tem certeza que deseja excluir esta unidade?
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <dl class="dl-horizontal">
                                <dt>Nome:</dt>
                                <dd>@Html.DisplayFor(model => model.Nome)</dd>

                                <dt>CPF:</dt>
                                <dd>@Html.DisplayFor(model => model.CPF)</dd>

                                <dt>Apelido:</dt>
                                <dd>@Html.DisplayFor(model => model.Apelido)</dd>

                                <dt>Celular:</dt>
                                <dd>@Html.DisplayFor(model => model.Celular)</dd>

                                <dt>Status:</dt>
                                <dd>
                                    @if (Model.Status == FrotaTaxi.Models.StatusEnum.Ativo)
                                    {
                                        <span class="label label-primary">Ativo</span>
                                    }
                                    else
                                    {
                                        <span class="label label-warning">Inativo</span>
                                    }
                                </dd>
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <dl class="dl-horizontal">
                                <dt>Carro:</dt>
                                <dd>@Html.DisplayFor(model => model.Carro)</dd>

                                <dt>Placa:</dt>
                                <dd>@Html.DisplayFor(model => model.Placa)</dd>

                                <dt>IMEI:</dt>
                                <dd>@Html.DisplayFor(model => model.IMEI)</dd>

                                <dt>% Corrida:</dt>
                                <dd>@Html.DisplayFor(model => model.PercentualCorrida)%</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <a class="btn btn-white" asp-action="Index">Cancelar</a>
                                <button type="submit" class="btn btn-danger">Excluir</button>
                            </div>
                        </div>
                    </form>

                    <div class="m-t-md text-muted">
                        <small>Observação: se existirem corridas vinculadas a esta unidade, a exclusão pode falhar devido a restrições de relacionamento.</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
