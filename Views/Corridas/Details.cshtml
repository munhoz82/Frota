@model FrotaTaxi.Models.Corrida

@{
    ViewBag.Title = "Detalhes da Corrida";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Detalhes da Corrida</h5>
                    <div class="ibox-tools">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-xs">
                            <i class="fa fa-edit"></i> Editar
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="dl-horizontal">
                                <dt>Cliente:</dt>
                                <dd>@Html.DisplayFor(model => model.Cliente.Nome)</dd>
                                
                                <dt>Solicitante:</dt>
                                <dd>@Html.DisplayFor(model => model.Solicitante.Nome)</dd>
                                
                                <dt>Data/Hora:</dt>
                                <dd>@Model.DataHoraAgendamento.ToString("dd/MM/yyyy HH:mm")</dd>
                                
                                <dt>Unidade:</dt>
                                <dd>@Html.DisplayFor(model => model.Unidade.Nome)</dd>
                                
                                <dt>Tipo Tarifa:</dt>
                                <dd>
                                    @switch (Model.TipoTarifa)
                                    {
                                        case FrotaTaxi.Models.TipoTarifaEnum.Livre:
                                            <span class="label label-info">Livre</span>
                                            break;
                                        case FrotaTaxi.Models.TipoTarifaEnum.KM:
                                            <span class="label label-warning">KM</span>
                                            break;
                                        case FrotaTaxi.Models.TipoTarifaEnum.Trecho:
                                            <span class="label label-success">Trecho</span>
                                            break;
                                    }
                                </dd>
                                
                                <dt>Valor:</dt>
                                <dd>@Html.DisplayFor(model => model.Valor, "{0:C}")</dd>
                                
                                <dt>Status:</dt>
                                <dd>
                                    @if (Model.Status == FrotaTaxi.Models.StatusCorridaEnum.Agendado)
                                    {
                                        <span class="label label-warning">Agendado</span>
                                    }
                                    else
                                    {
                                        <span class="label label-primary">Realizado</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        
                        <div class="col-md-6">
                            <dl class="dl-horizontal">
                                @if (Model.TipoTarifa == FrotaTaxi.Models.TipoTarifaEnum.Livre)
                                {
                                    <dt>Endereço Inicial:</dt>
                                    <dd>@Html.DisplayFor(model => model.EnderecoInicial)</dd>
                                    
                                    <dt>Endereço Final:</dt>
                                    <dd>@Html.DisplayFor(model => model.EnderecoFinal)</dd>
                                }
                                
                                @if (Model.TipoTarifa == FrotaTaxi.Models.TipoTarifaEnum.KM)
                                {
                                    <dt>KM Inicial:</dt>
                                    <dd>@Html.DisplayFor(model => model.KmInicial)</dd>
                                    
                                    <dt>KM Final:</dt>
                                    <dd>@Html.DisplayFor(model => model.KmFinal)</dd>
                                    
                                    @if (Model.KmInicial.HasValue && Model.KmFinal.HasValue)
                                    {
                                        <dt>Total KM:</dt>
                                        <dd>@((Model.KmFinal.Value - Model.KmInicial.Value).ToString("N2")) km</dd>
                                    }
                                }
                                
                                @if (Model.TipoTarifa == FrotaTaxi.Models.TipoTarifaEnum.Trecho && Model.Trecho != null)
                                {
                                    <dt>Trecho:</dt>
                                    <dd>@Html.DisplayFor(model => model.Trecho.NomeTrecho)</dd>
                                    
                                    <dt>Trecho Início:</dt>
                                    <dd>@Html.DisplayFor(model => model.Trecho.TrechoInicio)</dd>
                                    
                                    <dt>Trecho Término:</dt>
                                    <dd>@Html.DisplayFor(model => model.Trecho.TrechoTermino)</dd>
                                }
                                
                                @if (Model.CentroCusto != null)
                                {
                                    <dt>Centro de Custo:</dt>
                                    <dd>@Model.CentroCusto.Codigo - @Model.CentroCusto.Descricao</dd>
                                }
                                
                                @if (!string.IsNullOrEmpty(Model.Observacao))
                                {
                                    <dt>Observação:</dt>
                                    <dd>@Html.DisplayFor(model => model.Observacao)</dd>
                                }
                            </dl>
                        </div>
                    </div>
                    
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <a class="btn btn-white" asp-action="Index">Voltar à Lista</a>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
