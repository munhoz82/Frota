@model FrotaTaxi.Controllers.RelatorioCorridasViewModel

@{
    ViewData["Title"] = "Relatório de Corridas";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <!-- Filtros -->
                <form asp-action="Corridas" method="get" class="mb-4">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="dataInicio" class="form-label">Data Início</label>
                            <input type="date" class="form-control" id="dataInicio" name="dataInicio" 
                                   value="@Model.DataInicio.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-3">
                            <label for="dataFim" class="form-label">Data Fim</label>
                            <input type="date" class="form-control" id="dataFim" name="dataFim" 
                                   value="@Model.DataFim.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-3">
                            <label for="clienteId" class="form-label">Cliente</label>
                            <select class="form-control" id="clienteId" name="clienteId">
                                <option value="">Todos os Clientes</option>
                                @foreach (var cliente in Model.Clientes)
                                {
                                    <option value="@cliente.Id" selected="@(Model.ClienteId == cliente.Id)">
                                        @cliente.Nome
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fa fa-search"></i> Filtrar
                            </button>
                            <a href="@Url.Action("Corridas", "Relatorios", new { dataInicio = Model.DataInicio.ToString("yyyy-MM-dd"), dataFim = Model.DataFim.ToString("yyyy-MM-dd"), clienteId = Model.ClienteId, exportPdf = true })" 
                               class="btn btn-success" target="_blank" onclick="return imprimirRelatorio(this);">
                                <i class="fa fa-print"></i> Imprimir/PDF
                            </a>
                        </div>
                    </div>
                </form>

                <!-- Resumo -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <h4>@Model.Corridas.Count</h4>
                                <p>Total de Corridas</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h4>@Model.TotalGeral.ToString("C")</h4>
                                <p>Valor Total</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-info text-white">
                            <div class="card-body text-center">
                                <h4>@(Model.Corridas.Count > 0 ? (Model.TotalGeral / Model.Corridas.Count).ToString("C") : "R$ 0,00")</h4>
                                <p>Valor Médio</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Totais por Data -->
                @if (Model.TotalPorData.Any())
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5>Totais por Data</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Data</th>
                                            <th>Quantidade</th>
                                            <th>Valor Total</th>
                                            <th>Valor Médio</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.TotalPorData)
                                        {
                                            <tr>
                                                <td>@item.Data.ToString("dd/MM/yyyy")</td>
                                                <td>@item.Quantidade</td>
                                                <td>@item.Valor.ToString("C")</td>
                                                <td>@(item.Quantidade > 0 ? (item.Valor / item.Quantidade).ToString("C") : "R$ 0,00")</td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr class="table-dark">
                                            <th>TOTAL</th>
                                            <th>@Model.Corridas.Count</th>
                                            <th>@Model.TotalGeral.ToString("C")</th>
                                            <th>@(Model.Corridas.Count > 0 ? (Model.TotalGeral / Model.Corridas.Count).ToString("C") : "R$ 0,00")</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                }

                <!-- Detalhes das Corridas -->
                <div class="card">
                    <div class="card-header">
                        <h5>Detalhes das Corridas</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Data/Hora</th>
                                        <th>Cliente</th>
                                        <th>Solicitante</th>
                                        <th>Usuário</th>
                                        <th>Origem</th>
                                        <th>Destino</th>
                                        <th>Unidade</th>
                                        <th>Tipo</th>
                                        <th>Status</th>
                                        <th>Valor</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var corrida in Model.Corridas)
                                    {
                                        <tr>
                                            <td>@corrida.Id</td>
                                            <td>@corrida.DataHoraAgendamento.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@corrida.Cliente?.Nome</td>
                                            <td>@corrida.Solicitante?.Nome</td>
                                            <td>@corrida.Usuario?.Nome</td>
                                            <td>@corrida.EnderecoInicial</td>
                                            <td>@corrida.EnderecoFinal</td>
                                            <td>@corrida.Unidade?.Nome</td>
                                            <td>
                                                @switch (corrida.TipoTarifa)
                                                {
                                                    case FrotaTaxi.Models.TipoTarifaEnum.Livre:
                                                        <span class="badge bg-primary">Livre</span>
                                                        break;
                                                    case FrotaTaxi.Models.TipoTarifaEnum.KM:
                                                        <span class="badge bg-warning">KM</span>
                                                        break;
                                                    case FrotaTaxi.Models.TipoTarifaEnum.Trecho:
                                                        <span class="badge bg-info">Trecho</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                @switch (corrida.Status)
                                                {
                                                    case FrotaTaxi.Models.StatusCorridaEnum.Agendado:
                                                        <span class="badge bg-warning">Agendado</span>
                                                        break;
                                                    case FrotaTaxi.Models.StatusCorridaEnum.Realizado:
                                                        <span class="badge bg-success">Realizado</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@corrida.Valor.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        @if (!Model.Corridas.Any())
                        {
                            <div class="text-center py-4">
                                <i class="fa fa-info-circle fa-3x text-muted mb-3"></i>
                                <p class="text-muted">Nenhuma corrida encontrada no período selecionado.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function imprimirRelatorio(link) {
    // Abre a janela de impressão
    var printWindow = window.open(link.href, '_blank', 'width=1200,height=800,scrollbars=yes,resizable=yes');
    
    // Verifica se a janela foi aberta (pode ser bloqueada por pop-up blocker)
    if (!printWindow) {
        alert('Por favor, permita pop-ups para este site e tente novamente.');
        return false;
    }
    
    // Aguarda a janela carregar e então executa a impressão
    printWindow.onload = function() {
        setTimeout(function() {
            printWindow.focus();
            printWindow.print();
        }, 1000);
    };
    
    return false; // Previne o comportamento padrão do link
}
</script>
