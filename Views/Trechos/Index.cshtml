@model IEnumerable<FrotaTaxi.Models.Trecho>
@using FrotaTaxi.Helpers

@{
    ViewBag.Title = "Trechos";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Lista de Trechos</h5>
                    <div class="ibox-tools">
                        @if (User.CanEdit("Trechos"))
                        {
                            <a asp-action="Create" class="btn btn-primary btn-xs">
                                <i class="fa fa-plus"></i> Novo Trecho
                            </a>
                        }
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Cliente</th>
                                    <th>Nome do Trecho</th>
                                    <th>Trecho Início</th>
                                    <th>Trecho Término</th>
                                    <th>Valor</th>
                                    <th>Status</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Cliente.Nome)</td>
                                        <td>@Html.DisplayFor(modelItem => item.NomeTrecho)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TrechoInicio)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TrechoTermino)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Valor, "{0:C}")</td>
                                        <td>
                                            @if (item.Status == FrotaTaxi.Models.StatusEnum.Ativo)
                                            {
                                                <span class="label label-primary">Ativo</span>
                                            }
                                            else
                                            {
                                                <span class="label label-warning">Inativo</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                @if (User.CanEdit("Trechos"))
                                                {
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-xs">
                                                        <i class="fa fa-edit"></i> Editar
                                                    </a>
                                                }
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-xs">
                                                    <i class="fa fa-eye"></i> Detalhes
                                                </a>
                                                @if (User.CanEdit("Trechos"))
                                                {
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-xs">
                                                        <i class="fa fa-trash"></i> Excluir
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.dataTables-example').DataTable({
                pageLength: 25,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.20/i18n/Portuguese-Brasil.json'
                }
            });
        });
    </script>
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
}
